<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>
    <style name="FullScreenImage" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/fullScreenImage</item>
        <item name="colorPrimaryDark">@color/fullScreenImage</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/fullScreenImage</item>
    </style>
</resources>
